{
  "manifest_version": 2,
  "name": "Cardtainers",
  "version": "1.17",
  "description": "An experimental way to generate containers for the NationStates trading cards game.",
  "permissions": [
    "contextualIdentities",
    "tabs",
    "cookies",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*.nationstates.net/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "Cardtainers@Kractero"
    }
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "icons": {
    "48": "icon.png"
  },
  "background": {
    "scripts": ["index.js", "request.js"]
  }
}
